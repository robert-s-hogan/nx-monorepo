{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "types": ["jest", "node"],
    "baseUrl": ".",
    "paths": {
      "@conquestCampaigns/*": ["src/app/campaigns/*"],
      "@conquestComponents/*": ["src/app/components/*"],
      "@conquestConstants/*": ["src/app/constants/*"],
      "@conquestContexts/*": ["src/app/contexts/*"],
      "@conquestData/*": ["src/app/data/*"],
      "@conquestEncounters/*": ["src/app/encounters/*"],
      "@conquestHooks/*": ["src/app/hooks/*"],
      "@conquestServices/*": ["src/app/services/*"],
      "@conquestStyles/*": ["src/app/styles/*"],
      "@conquestTypes/*": ["src/app/types/*"],
      "@conquestUtils/*": ["src/app/utils/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "../../apps/conquest/.next/types/**/*.ts",
    "../../dist/apps/conquest/.next/types/**/*.ts",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ]
}
